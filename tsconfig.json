{
    "compilerOptions": {
      "experimentalDecorators": true,            
      "target": "ES6",                                
      "module": "commonjs",                           
      "lib": [
        "ESNext"
      ],                                   
      "outDir": "./build",                    
      "strict": true,                                
      "esModuleInterop": true,                        
      "skipLibCheck": true,                          
      "forceConsistentCasingInFileNames": true        
    },
    "include": [
      "src/**/*"
    ]
  }